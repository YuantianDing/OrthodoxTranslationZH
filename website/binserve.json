{
    "server": {
        "host": "localhost:3000"
    },

    "routes": {
        "/": "out/index.html",
        "": "out/index.html"
    },

    "static": {
        "directory": "out/",
        "served_from": "/",
        "error_pages": {
            "404": "out/404.html"
        }
    },
    "config": {
        "enable_hot_reload": true,
        "fast_mem_cache": true,
        "enable_cache_control": true,
        "enable_directory_listing": true,
        "minify_html": true,
        "follow_symlinks": false,
        "enable_logging": false
    },

    "insert_headers": {
        "x-greetings": "hellooo!"
    }
}